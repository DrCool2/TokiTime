<p id="notice"><%= notice %></p>

<h1>Tokis</h1>

<table>
  <thead>
    <tr>
      <th>Clock in</th>
      <th>Clock out</th>
      <th>Duration (in Hours)</th>
      <th>Approximate Duration</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tokis.each do |toki| %>
      <tr>
        <td><%= toki.clock_in.strftime('%m-%d-%Y %l:%M %p') %></td>
        <td><%= toki.clock_out.strftime('%m-%d-%Y %l:%M %p') %></td>
        <td><%= Toki.hours(toki.id) %></td>
	<td><%= distance_of_time_in_words(toki.clock_in, toki.clock_out, include_seconds: false) %></td>
        <td><%= toki.note %></td>
        <td><%= link_to 'Show', toki %></td>
        <td><%= link_to 'Edit', edit_toki_path(toki) %></td>
        <td><%= link_to 'Destroy', toki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

